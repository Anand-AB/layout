<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"      >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:textColor="#3EFFE7"
        android:textSize="25dp"
        android:text="@string/welcome_to_anand_app_" />

    <Button
        android:id="@+id/watsap_rate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:text="@string/rate"
        android:textColor="#000000"
        android:textStyle="italic" />

    <Button
        android:id="@+id/watsap_help_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:text="@string/help"
        android:textColor="#000000"
        android:textStyle="italic" />

    <Button
        android:id="@+id/watsap_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/watsap_help_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="#ffffff"
        android:text="@string/start"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/watsap_start_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/cover" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:background="#FF3EA2"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>